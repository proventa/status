#!/bin/sh
date=`date '+%F'`
time=`date '+%T'`
title="$1"
if [ -z "$title" ]; then
  echo -n "Title:"
  read title
fi
filetitle=$(echo $title | tr ' ' '-')
tempfile=$(mktemp)
file="content/issues/${date}-${filetitle}.md"
editor="nano"
if [ -n "$VISUAL" ]; then
    editor=$VISUAL
fi
cat >$file <<EOF
---
title:  "$title"
date:   $date $time
#resolved: true
#resolvedWhen: $date $time
# Possible severity levels: down, disrupted, notice
severity: down
section: issue
affected:
  - Filoo
  - Untermainkai
  - HH1
---

EOF
if [ -t 0 ]; then
cp $file $tempfile
$editor +100 $file
if diff -q $file $tempfile >/dev/null; then
  echo "file not changed. aborting..."
  rm $file
  exit 1
fi
rm $tempfile
else
  cat >> $file
fi

git add .
git commit -m "new post: $title"
git push
